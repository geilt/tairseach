{
  "manifest_version": "1.0.0",
  "id": "onepassword",
  "name": "1Password",
  "description": "1Password CLI integration for managing vaults and items.",
  "version": "0.1.0",
  "category": "security",
  "tools": [
    {
      "name": "op.status",
      "description": "Check 1Password CLI status and authentication.",
      "inputSchema": {
        "type": "object",
        "properties": {},
        "additionalProperties": false
      },
      "outputSchema": {"type": "object"},
      "annotations": {"readOnlyHint": true}
    },
    {
      "name": "op.vaults.list",
      "description": "List all 1Password vaults.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "credType": {"type": "string", "default": "onepassword"},
          "label": {"type": "string"}
        },
        "additionalProperties": false
      },
      "outputSchema": {"type": "object"},
      "annotations": {"readOnlyHint": true}
    },
    {
      "name": "op.items.list",
      "description": "List items in a 1Password vault.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "vault": {"type": "string"},
          "credType": {"type": "string", "default": "onepassword"},
          "label": {"type": "string"}
        },
        "additionalProperties": false
      },
      "outputSchema": {"type": "object"},
      "annotations": {"readOnlyHint": true}
    },
    {
      "name": "op.items.get",
      "description": "Get a specific 1Password item by ID or name.",
      "inputSchema": {
        "type": "object",
        "required": ["item"],
        "properties": {
          "item": {"type": "string"},
          "vault": {"type": "string"},
          "credType": {"type": "string", "default": "onepassword"},
          "label": {"type": "string"}
        },
        "additionalProperties": false
      },
      "outputSchema": {"type": "object"},
      "annotations": {"readOnlyHint": true}
    }
  ],
  "implementation": {
    "type": "internal",
    "module": "proxy.handlers.onepassword",
    "methods": {
      "op.status": "status",
      "op.vaults.list": "vaults.list",
      "op.items.list": "items.list",
      "op.items.get": "items.get"
    }
  },
  "requires": {
    "credentials": {
      "type": "custom",
      "credType": "onepassword"
    }
  },
  "compatibility": {
    "mcpProtocol": "2025-03-26",
    "os": ["macos", "linux", "windows"]
  }
}
