{
  "manifest_version": "1.0.0",
  "id": "google-calendar",
  "name": "Google Calendar",
  "description": "Google Calendar API integration for managing events and calendars.",
  "version": "0.1.0",
  "category": "productivity",
  "requires": {
    "credentials": [{
      "id": "google_oauth",
      "provider": "google",
      "kind": "oauth2",
      "scopes": ["https://www.googleapis.com/auth/calendar"]
    }]
  },
  "tools": [
    {
      "name": "gcalendar.listCalendars",
      "description": "List all Google calendars.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "provider": {"type": "string", "description": "OAuth provider. Default: 'google'."},
          "account": {"type": "string", "description": "OAuth account name."}
        },
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "required": ["calendars", "count"],
        "properties": {
          "calendars": {"type": "array"},
          "count": {"type": "integer"}
        }
      },
      "annotations": {"readOnlyHint": true}
    },
    {
      "name": "gcalendar.listEvents",
      "description": "List events from a calendar within a time range.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "provider": {"type": "string"},
          "account": {"type": "string"},
          "calendarId": {"type": "string", "description": "Calendar ID. Default: 'primary'."},
          "calendar_id": {"type": "string", "description": "Alias for calendarId."},
          "timeMin": {"type": "string", "description": "RFC3339 start time."},
          "time_min": {"type": "string", "description": "Alias for timeMin."},
          "timeMax": {"type": "string", "description": "RFC3339 end time."},
          "time_max": {"type": "string", "description": "Alias for timeMax."},
          "maxResults": {"type": "integer"},
          "max_results": {"type": "integer"}
        },
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "required": ["events", "count"],
        "properties": {
          "events": {"type": "array"},
          "count": {"type": "integer"}
        }
      },
      "annotations": {"readOnlyHint": true}
    },
    {
      "name": "gcalendar.getEvent",
      "description": "Get a specific event by ID.",
      "inputSchema": {
        "type": "object",
        "required": ["eventId"],
        "properties": {
          "provider": {"type": "string"},
          "account": {"type": "string"},
          "calendarId": {"type": "string"},
          "calendar_id": {"type": "string"},
          "eventId": {"type": "string", "description": "Event ID."},
          "event_id": {"type": "string"}
        },
        "additionalProperties": false
      },
      "outputSchema": {"type": "object"},
      "annotations": {"readOnlyHint": true}
    },
    {
      "name": "gcalendar.createEvent",
      "description": "Create a new calendar event.",
      "inputSchema": {
        "type": "object",
        "required": ["summary", "start", "end"],
        "properties": {
          "provider": {"type": "string"},
          "account": {"type": "string"},
          "calendarId": {"type": "string"},
          "calendar_id": {"type": "string"},
          "summary": {"type": "string", "description": "Event title."},
          "start": {"type": "string", "description": "RFC3339 start time."},
          "end": {"type": "string", "description": "RFC3339 end time."},
          "location": {"type": "string"},
          "description": {"type": "string"}
        },
        "additionalProperties": false
      },
      "outputSchema": {"type": "object"}
    },
    {
      "name": "gcalendar.updateEvent",
      "description": "Update an existing event.",
      "inputSchema": {
        "type": "object",
        "required": ["eventId"],
        "properties": {
          "provider": {"type": "string"},
          "account": {"type": "string"},
          "calendarId": {"type": "string"},
          "calendar_id": {"type": "string"},
          "eventId": {"type": "string"},
          "event_id": {"type": "string"},
          "summary": {"type": "string"},
          "start": {"type": "string"},
          "end": {"type": "string"},
          "location": {"type": "string"},
          "description": {"type": "string"}
        },
        "additionalProperties": false
      },
      "outputSchema": {"type": "object"}
    },
    {
      "name": "gcalendar.deleteEvent",
      "description": "Delete an event.",
      "inputSchema": {
        "type": "object",
        "required": ["eventId"],
        "properties": {
          "provider": {"type": "string"},
          "account": {"type": "string"},
          "calendarId": {"type": "string"},
          "calendar_id": {"type": "string"},
          "eventId": {"type": "string"},
          "event_id": {"type": "string"}
        },
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "required": ["deleted"],
        "properties": {"deleted": {"type": "boolean"}}
      },
      "annotations": {"destructiveHint": true}
    }
  ],
  "implementation": {
    "type": "internal",
    "module": "proxy.handlers.google_calendar",
    "methods": {
      "gcalendar.listCalendars": "gcalendar.list_calendars",
      "gcalendar.listEvents": "gcalendar.list_events",
      "gcalendar.getEvent": "gcalendar.get_event",
      "gcalendar.createEvent": "gcalendar.create_event",
      "gcalendar.updateEvent": "gcalendar.update_event",
      "gcalendar.deleteEvent": "gcalendar.delete_event"
    }
  },
  "compatibility": {"mcpProtocol": "2025-03-26", "os": ["macos"]}
}
