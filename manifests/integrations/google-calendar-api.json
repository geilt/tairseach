{
  "manifest_version": "1.0.0",
  "id": "google-calendar-api",
  "name": "Google Calendar",
  "description": "Access Google Calendar via Google Calendar API v3 (list calendars, events, create/update/delete events).",
  "version": "1.0.0",
  "category": "productivity",
  "requires": {
    "credentials": [
      {
        "id": "google-oauth",
        "provider": "google",
        "kind": "oauth2",
        "scopes": [
          "https://www.googleapis.com/auth/calendar"
        ]
      }
    ],
    "permissions": []
  },
  "tools": [
    {
      "name": "gcalendar_list_calendars",
      "description": "List all calendars for the authenticated user.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "account": {
            "type": "string",
            "description": "Google account email address (required)"
          }
        },
        "required": ["account"],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "required": ["calendars", "count"],
        "properties": {
          "calendars": { "type": "array" },
          "count": { "type": "integer" }
        },
        "additionalProperties": true
      },
      "annotations": {
        "readOnlyHint": true,
        "openWorldHint": false
      }
    },
    {
      "name": "gcalendar_list_events",
      "description": "List events in a calendar within a time range.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "account": {
            "type": "string",
            "description": "Google account email address (required)"
          },
          "calendarId": {
            "type": "string",
            "default": "primary",
            "description": "Calendar ID (use 'primary' for user's main calendar)"
          },
          "timeMin": {
            "type": "string",
            "description": "Lower bound for event start time (RFC3339 timestamp, e.g., '2026-02-08T00:00:00Z')"
          },
          "timeMax": {
            "type": "string",
            "description": "Upper bound for event start time (RFC3339 timestamp)"
          },
          "maxResults": {
            "type": "integer",
            "minimum": 1,
            "maximum": 2500,
            "default": 250,
            "description": "Maximum number of events to return"
          }
        },
        "required": ["account"],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "required": ["events", "count"],
        "properties": {
          "events": { "type": "array" },
          "count": { "type": "integer" }
        },
        "additionalProperties": true
      },
      "annotations": {
        "readOnlyHint": true,
        "openWorldHint": true
      }
    },
    {
      "name": "gcalendar_get_event",
      "description": "Get details of a specific event by ID.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "account": {
            "type": "string",
            "description": "Google account email address (required)"
          },
          "calendarId": {
            "type": "string",
            "default": "primary",
            "description": "Calendar ID"
          },
          "eventId": {
            "type": "string",
            "description": "Event ID"
          }
        },
        "required": ["account", "eventId"],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "additionalProperties": true
      },
      "annotations": {
        "readOnlyHint": true,
        "openWorldHint": true
      }
    },
    {
      "name": "gcalendar_create_event",
      "description": "Create a new calendar event.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "account": {
            "type": "string",
            "description": "Google account email address (required)"
          },
          "calendarId": {
            "type": "string",
            "default": "primary",
            "description": "Calendar ID"
          },
          "summary": {
            "type": "string",
            "description": "Event title"
          },
          "start": {
            "type": "string",
            "description": "Start time (RFC3339 timestamp or YYYY-MM-DD for all-day events)"
          },
          "end": {
            "type": "string",
            "description": "End time (RFC3339 timestamp or YYYY-MM-DD for all-day events)"
          },
          "location": {
            "type": "string",
            "description": "Event location (optional)"
          },
          "description": {
            "type": "string",
            "description": "Event description (optional)"
          }
        },
        "required": ["account", "summary", "start", "end"],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "additionalProperties": true
      },
      "annotations": {
        "destructiveHint": false,
        "openWorldHint": true
      }
    },
    {
      "name": "gcalendar_update_event",
      "description": "Update an existing calendar event.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "account": {
            "type": "string",
            "description": "Google account email address (required)"
          },
          "calendarId": {
            "type": "string",
            "default": "primary",
            "description": "Calendar ID"
          },
          "eventId": {
            "type": "string",
            "description": "Event ID"
          },
          "summary": {
            "type": "string",
            "description": "Event title"
          },
          "start": {
            "type": "string",
            "description": "Start time (RFC3339 timestamp or YYYY-MM-DD)"
          },
          "end": {
            "type": "string",
            "description": "End time (RFC3339 timestamp or YYYY-MM-DD)"
          },
          "location": {
            "type": "string",
            "description": "Event location"
          },
          "description": {
            "type": "string",
            "description": "Event description"
          }
        },
        "required": ["account", "eventId"],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "additionalProperties": true
      },
      "annotations": {
        "destructiveHint": false,
        "openWorldHint": true
      }
    },
    {
      "name": "gcalendar_delete_event",
      "description": "Delete a calendar event.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "account": {
            "type": "string",
            "description": "Google account email address (required)"
          },
          "calendarId": {
            "type": "string",
            "default": "primary",
            "description": "Calendar ID"
          },
          "eventId": {
            "type": "string",
            "description": "Event ID"
          }
        },
        "required": ["account", "eventId"],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "required": ["deleted"],
        "properties": {
          "deleted": { "type": "boolean" }
        },
        "additionalProperties": true
      },
      "annotations": {
        "destructiveHint": true,
        "openWorldHint": true
      }
    }
  ],
  "implementation": {
    "type": "internal",
    "module": "google.calendar",
    "methods": {
      "gcalendar_list_calendars": "gcalendar.list_calendars",
      "gcalendar_list_events": "gcalendar.list_events",
      "gcalendar_get_event": "gcalendar.get_event",
      "gcalendar_create_event": "gcalendar.create_event",
      "gcalendar_update_event": "gcalendar.update_event",
      "gcalendar_delete_event": "gcalendar.delete_event"
    }
  },
  "compatibility": {
    "mcpProtocol": "2025-03-26",
    "os": ["macos", "linux", "windows"]
  }
}
