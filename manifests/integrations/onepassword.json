{
  "manifest_version": "1.0.0",
  "id": "onepassword",
  "name": "1Password",
  "description": "Access 1Password vaults and items via Connect API. Eliminates CLI keychain popups.",
  "version": "1.0.0",
  "category": "security",
  "requires": {
    "credentials": [
      {
        "id": "onepassword-service-account",
        "provider": "onepassword",
        "kind": "token",
        "description": "1Password Connect service account token"
      }
    ],
    "permissions": []
  },
  "tools": [
    {
      "name": "op_status",
      "description": "Check 1Password Connect API status (heartbeat).",
      "inputSchema": {
        "type": "object",
        "properties": {
          "account": {
            "type": "string",
            "description": "Service account name (default: 'default')",
            "default": "default"
          },
          "connect_host": {
            "type": "string",
            "description": "1Password Connect host URL",
            "default": "http://localhost:8080"
          }
        },
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "additionalProperties": true
      },
      "annotations": {
        "readOnlyHint": true,
        "openWorldHint": false
      }
    },
    {
      "name": "op_vaults_list",
      "description": "List all vaults accessible to the service account.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "account": {
            "type": "string",
            "description": "Service account name (default: 'default')",
            "default": "default"
          },
          "connect_host": {
            "type": "string",
            "description": "1Password Connect host URL",
            "default": "http://localhost:8080"
          }
        },
        "required": ["account"],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "additionalProperties": true
      },
      "annotations": {
        "readOnlyHint": true,
        "openWorldHint": false
      }
    },
    {
      "name": "op_items_list",
      "description": "List items in a vault.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "account": {
            "type": "string",
            "description": "Service account name (default: 'default')",
            "default": "default"
          },
          "connect_host": {
            "type": "string",
            "description": "1Password Connect host URL",
            "default": "http://localhost:8080"
          },
          "vault_id": {
            "type": "string",
            "description": "Vault ID or name"
          }
        },
        "required": ["account", "vault_id"],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "additionalProperties": true
      },
      "annotations": {
        "readOnlyHint": true,
        "openWorldHint": false
      }
    },
    {
      "name": "op_items_get",
      "description": "Get full details of an item, including secrets.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "account": {
            "type": "string",
            "description": "Service account name (default: 'default')",
            "default": "default"
          },
          "connect_host": {
            "type": "string",
            "description": "1Password Connect host URL",
            "default": "http://localhost:8080"
          },
          "vault_id": {
            "type": "string",
            "description": "Vault ID or name"
          },
          "item_id": {
            "type": "string",
            "description": "Item ID or name"
          }
        },
        "required": ["account", "vault_id", "item_id"],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "additionalProperties": true
      },
      "annotations": {
        "readOnlyHint": true,
        "openWorldHint": false
      }
    },
    {
      "name": "op_items_create",
      "description": "Create a new item in a vault.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "account": {
            "type": "string",
            "description": "Service account name (default: 'default')",
            "default": "default"
          },
          "connect_host": {
            "type": "string",
            "description": "1Password Connect host URL",
            "default": "http://localhost:8080"
          },
          "vault_id": {
            "type": "string",
            "description": "Vault ID or name"
          },
          "item": {
            "type": "object",
            "description": "Item data (title, category, fields, etc.)",
            "additionalProperties": true
          }
        },
        "required": ["account", "vault_id", "item"],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "additionalProperties": true
      },
      "annotations": {
        "destructiveHint": false,
        "openWorldHint": false
      }
    }
  ],
  "implementation": {
    "type": "internal",
    "module": "onepassword",
    "methods": {
      "op_status": "op.status",
      "op_vaults_list": "op.vaults.list",
      "op_items_list": "op.items.list",
      "op_items_get": "op.items.get",
      "op_items_create": "op.items.create"
    }
  },
  "compatibility": {
    "mcpProtocol": "2025-03-26",
    "os": ["macos", "linux", "windows"]
  }
}
